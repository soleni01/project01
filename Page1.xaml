        <StackLayout>
            <Label Text="enter info"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            
            <Entry x:Name="fname" Placeholder="fname"/>
            <Entry x:Name="usrname" Placeholder= "username"/>
            <Entry x:Name="phonenumber" Placeholder= "phonenumber"/>
            <Entry x:Name="email" Placeholder="solenitufa@gmail.com"/>
            <Entry x:Name="password1"   Placeholder= "password"/>
            <Entry x:Name="gender1" Placeholder="gender"/>

            <Button  x:Name="submit2" Text="login"  Clicked="log" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>